#include<stdio.h>
#include<stdlib.h>
int main()
{
	int i,j,n;
	printf("请输入该菱形的高:");
	scanf("%d",&n);
	for(i=1;i<=n/2+1;i++)
	{
		for(j=1;j<=n-i;j++)
		{
			printf(" ");
		}
		for(j=1;j<=2*i-1;j++)
		{
			printf("*");
		}
		    printf("\n");
	}
	for(i=n/2;i>=1;i--)
	{
		for(j=1;j<=n-i;j++)
		{
			printf(" ");
		}
		for(j=1;j<=2*i-1;j++)
		{
			printf("*");
		}
		    printf("\n");
	}  
        system("pause");
        return 0;
}
