#include<stdio.h>
#include<stdlib.h>
int sushu(int n)
{
   int i; 
   for(i=2;i<n;i++)
   {
      if(n%i==0)
	  {
	   printf("%d不是素数\n",n);
	   return 0;
	  }
   }
       printf("%d是素数\n",n);
       return 0;
 }

int main()
{
  int n=0;
  printf("请输入n:");
  scanf("%d",&n);
  sushu(n);
  system("pause");
  return 0;
